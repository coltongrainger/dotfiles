! utilities
URxvt.perl-ext-common: default,clipboard,matcher
URxvt.url-launcher: xdg-open
URxvt.matcher.button: 1
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste
URxvt.clipboard.copycmd:  xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

! free up these chords
URxvt.keysym.C-M-c: builtin-string:
URxvt.keysym.C-M-v: builtin-string:
URxvt.keysym.M-s: builtin-string:

! disable unicode pasting
URxvt.iso14755: false
URxvt.iso14755_52: false

! scroll
URxvt.keysym.S-Up:    string:\033[1;2A
URxvt.keysym.S-Down:  string:\033[1;2B
URxvt.keysym.S-Right: string:\033[1;2C
URxvt.keysym.S-Left:  string:\033[1;2D
URxvt.scrollBar: false
URxvt.cursorBlink: false

! font
Xft.dpi: 120
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

URxvt.font: xft:Iosevka Nerd Font Mono:style=medium:pixelsize=17
URxvt.boldFont: xft:Iosevka Nerd Font Mono:style=bold:pixelsize=17
URxvt.italicFont: xft:Iosevka Nerd Font Mono:style=italic:pixelsize=17
URxvt.boldItalicFont: xft:Iosevka Nerd Font Mono:style=bold italic:pixelsize=17

URxvt.keysym.C-S-plus: font-size:increase
URxvt.keysym.C-KP_Add: font-size:increase
URxvt.keysym.C-S-underscore: font-size:decrease
URxvt.keysym.C-KP_Subtract: font-size:decrease
URxvt.keysym.C-0: font-size:reset
URxvt.keysym.C-KP_0: font-size:reset

