#!/bin/bash

# Load resources
xrdb -merge .Xresources
xmodmap ~/.xmodmap

# icon tray
stalonetray &

# bluetooth?
bluetooth-applet &

# Fire up apps
xscreensaver -no-splash &

# Set background image with feh
feh --bg-scale ~/Downloads/meowzer.jpg &

if [ -x /usr/bin/nm-applet ] ; then
   nm-applet --sm-disable &
fi

exec xmonad
