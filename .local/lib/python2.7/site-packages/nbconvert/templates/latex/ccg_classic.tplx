((=- Default to the notebook output style -=))
((* if not cell_style is defined *))
    ((*- set cell_style = 'ccg_style_jupyter.tplx' -*))
((* endif *))

((=- Inherit from the specified cell style. -=))
((* extends cell_style *))


%===============================================================================
% Latex Article
%===============================================================================

((* block docclass *))
\documentclass[11pt]{article}
((*- endblock docclass -*))

{((*- block packages -*))
    % metadata: date and filename
    \usepackage[english]{datetime2}
    \usepackage{currfile}

    % set \today as YYYY-MM-DD
    \DTMsetdatestyle{iso}
    \usepackage{parskip}
    \setcounter{secnumdepth}{0} %Suppress section numbers
    ((( super() )))
((*- endblock packages -*))

((*- block definitions -*))
    \let\Oldtex\TeX     % provide compatibility with nbconvert <= 5.3.1
    \let\Oldlatex\LaTeX % pre-included in nbconvert > 5.3.1 so redundant
    ((( super() )))
    %Updated MathJax Compatibility (if future behaviour of the notebook changes this may be removed)
    \renewcommand{\TeX}{\ifmmode \textrm{\Oldtex} \else \textbackslash TeX \fi}
    \renewcommand{\LaTeX}{\ifmmode \Oldlatex \else \textbackslash LaTeX \fi}
    
    % Header Adjustments
    \renewcommand{\paragraph}{\textbf}
    \renewcommand{\subparagraph}[1]{\textit{\textbf{#1}}}
((*- endblock definitions -*))

((* block style_settings *))
        \leftmarginstrue
((* endblock style_settings *))

((* block maketitle *))\maketitle \tableofcontents((* endblock maketitle *))
((* block author *))\author{Colton Grainger (\texttt{colton.grainger@colorado.edu})}((* endblock author*))
((* block date *))\date{Compiled \today\ with nbconvert.}((* endblock date *))
