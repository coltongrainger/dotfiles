#!/bin/bash

xrdb -merge .Xresources
xmodmap ~/.xmodmap

feh --bg-scale ~/.xmonad/desktop-background.png &
xscreensaver -no-splash &

stalonetray &
cbatticon -u 20 -i "notification" -c "poweroff" -l 20 -r 10 &

if [ -x /usr/bin/nm-applet ] ; then
   nm-applet --sm-disable &
fi

if [ -x /usr/bin/gnome-power-manager ] ; then
   sleep 3
   gnome-power-manager &
fi

exec xmonad
