#!/bin/bash

xrdb -merge .Xresources
feh --bg-scale ~/.xmonad/desktop-background.png &
xscreensaver -no-splash &
xmobar &
stalonetray &
cbatticon -u 20 -c "sudo poweroff" -l 20 -r 10 &
udiskie -t --notify-command "zenity --info --text '{event}: {device_presentation}'" &
nm-applet --sm-disable &
xmodmap ~/.xmodmap
exec xmonad
