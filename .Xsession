#!/bin/bash

# Load resources
xrdb -merge .Xresources
xmodmap ~/.xmodmap

# icon tray
stalonetray &

# screensaver
xscreensaver -no-splash &

# background image
feh --bg-scale ~/.xmonad/desktop-background.png &

if [ -x /usr/bin/nm-applet ] ; then
   nm-applet --sm-disable &
fi

# start ssh-agent and add the key(s)
id1=$HOME/.ssh/identity
id2=$HOME/.ssh/id_dsa
id3=$HOME/.ssh/id_rsa
if [ -x /usr/bin/ssh-agent ] && [ -f $id1 -o -f $id2 -o -f $id3 ];
then
  eval `ssh-agent -s`
  ssh-add < /dev/null
fi

exec xmonad
